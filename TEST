    <script>
        // Campus database with comprehensive information
        const campusDatabase = {
            library: {
                hours: {
                    monday: "7:00 AM - 11:00 PM",
                    tuesday: "7:00 AM - 11:00 PM", 
                    wednesday: "7:00 AM - 11:00 PM",
                    thursday: "7:00 AM - 11:00 PM",
                    friday: "7:00 AM - 9:00 PM",
                    saturday: "9:00 AM - 6:00 PM",
                    sunday: "12:00 PM - 11:00 PM"
                },
                services: ["Book checkout", "Study rooms", "Computer lab", "Printing", "Research assistance", "Group study areas"],
                floors: {
                    1: "Reference desk, circulation, caf√©",
                    2: "Quiet study, individual carrels",
                    3: "Group study rooms, collaborative spaces",
                    4: "Special collections, archives"
                }
            },
            dining: {
                locations: {
                    "Main Dining Hall": {
                        hours: "7:00 AM - 9:00 PM",
                        menu: ["Grilled chicken", "Vegetarian pasta", "Fresh salad bar", "Pizza station", "Soup of the day"]
                    },
                    "Student Union Caf√©": {
                        hours: "8:00 AM - 6:00 PM", 
                        menu: ["Sandwiches", "Coffee", "Pastries", "Smoothies", "Grab-and-go items"]
                    },
                    "Science Building Caf√©": {
                        hours: "9:00 AM - 3:00 PM",
                        menu: ["Light meals", "Snacks", "Beverages", "Healthy options"]
                    }
                }
            },
            facilities: {
                "Student Center": "Building A, 1st floor - Student services, mailboxes, lounge areas",
                "Gym/Recreation Center": "Building C - Fitness equipment, basketball courts, pool, group classes",
                "Computer Labs": "Library 1st floor, Engineering Building 2nd floor, Business Building 3rd floor",
                "Health Center": "Building B, 1st floor - Medical services, counseling",
                "Bookstore": "Student Union, ground floor - Textbooks, supplies, merchandise"
            },
            administrative: {
                registration: "Online through student portal or Registrar's Office in Admin Building Room 101",
                transcripts: "Request online or visit Registrar's Office",
                financial_aid: "Financial Aid Office, Admin Building Room 201",
                parking: "Permits available online or Campus Safety Office",
                id_cards: "Student Services, Student Center Room 105"
            },
            schedules: {
                classes: "Check student portal for personal schedule",
                finals: "December 12-16, 2024",
                spring_break: "March 10-14, 2025",
                graduation: "May 15, 2025"
            }
        };

        function handleKeyPress(event) {
            if (event.key === 'Enter') {
                sendMessage();
            }
        }

        function askQuestion(question) {
            document.getElementById('chatInput').value = question;
            sendMessage();
        }

        function sendMessage() {
            const input = document.getElementById('chatInput');
            const message = input.value.trim();
            
            if (!message) return;

            // Add user message
            addMessage(message, 'user');
            input.value = '';

            // Show typing indicator
            showTypingIndicator();

            // Process message and respond
            setTimeout(() => {
                hideTypingIndicator();
                const response = processQuery(message);
                addMessage(response, 'bot');
            }, 1000 + Math.random() * 1000);
        }

        function addMessage(message, sender) {
            const chatMessages = document.getElementById('chatMessages');
            const messageDiv = document.createElement('div');
            messageDiv.className = 'chat-bubble flex items-start space-x-3';

            if (sender === 'user') {
                messageDiv.innerHTML = `
                    <div class="flex-1"></div>
                    <div class="bg-blue-600 text-white rounded-lg p-3 max-w-xs">
                        <p class="text-sm">${message}</p>
                    </div>
                    <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center flex-shrink-0">
                        <span class="text-white text-sm">üë§</span>
                    </div>
                `;
            } else {
                messageDiv.innerHTML = `
                    <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
                        <span class="text-blue-600 text-sm">ü§ñ</span>
                    </div>
                    <div class="bg-gray-100 rounded-lg p-3 max-w-md">
                        <p class="text-sm text-gray-800">${message}</p>
                    </div>
                `;
            }

            chatMessages.appendChild(messageDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }

        function showTypingIndicator() {
            const chatMessages = document.getElementById('chatMessages');
            const typingDiv = document.createElement('div');
            typingDiv.id = 'typingIndicator';
            typingDiv.className = 'flex items-start space-x-3';
            typingDiv.innerHTML = `
                <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
                    <span class="text-blue-600 text-sm">ü§ñ</span>
                </div>
                <div class="bg-gray-100 rounded-lg p-3">
                    <div class="flex space-x-1">
                        <div class="w-2 h-2 bg-gray-400 rounded-full typing-indicator"></div>
                        <div class="w-2 h-2 bg-gray-400 rounded-full typing-indicator" style="animation-delay: 0.2s"></div>
                        <div class="w-2 h-2 bg-gray-400 rounded-full typing-indicator" style="animation-delay: 0.4s"></div>
                    </div>
                </div>
            `;
            chatMessages.appendChild(typingDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }

        function hideTypingIndicator() {
            const indicator = document.getElementById('typingIndicator');
            if (indicator) {
                indicator.remove();
            }
        }

        function processQuery(query) {
            const lowerQuery = query.toLowerCase();

            // Library queries
            if (lowerQuery.includes('library')) {
                if (lowerQuery.includes('hours')) {
                    const today = new Date().toLocaleDateString('en-US', { weekday: 'long' }).toLowerCase();
                    const hours = campusDatabase.library.hours[today] || "Please check the library website for current hours";
                    return `üìö The library is open ${hours} today. You can also book study rooms online or visit our computer lab on the first floor!`;
                }
                if (lowerQuery.includes('services')) {
                    return `üìö Library services include: ${campusDatabase.library.services.join(', ')}. Need help with research? Visit the reference desk on the first floor!`;
                }
                return `üìö The library has 4 floors with different study environments. Today's hours: ${campusDatabase.library.hours[new Date().toLocaleDateString('en-US', { weekday: 'long' }).toLowerCase()]}. What specific library service do you need?`;
            }

            // Dining queries
            if (lowerQuery.includes('dining') || lowerQuery.includes('food') || lowerQuery.includes('menu') || lowerQuery.includes('eat')) {
                if (lowerQuery.includes('menu')) {
                    return `üçΩÔ∏è Today's dining options:\n\n**Main Dining Hall**: ${campusDatabase.dining.locations["Main Dining Hall"].menu.join(', ')}\n\n**Student Union Caf√©**: ${campusDatabase.dining.locations["Student Union Caf√©"].menu.join(', ')}\n\nAll locations accept meal plans and campus cards!`;
                }
                return `üçΩÔ∏è We have 3 dining locations on campus: Main Dining Hall (7 AM-9 PM), Student Union Caf√© (8 AM-6 PM), and Science Building Caf√© (9 AM-3 PM). Would you like to see today's menu?`;
            }

            // Facilities queries
            if (lowerQuery.includes('where') || lowerQuery.includes('location') || lowerQuery.includes('find')) {
                for (const [facility, location] of Object.entries(campusDatabase.facilities)) {
                    if (lowerQuery.includes(facility.toLowerCase()) || lowerQuery.includes(facility.split(' ')[0].toLowerCase())) {
                        return `üìç ${facility}: ${location}. Need directions? I can help you navigate there!`;
                    }
                }
                return `üìç I can help you find: Student Center, Gym, Computer Labs, Health Center, or Bookstore. What are you looking for?`;
            }

            // Administrative queries
            if (lowerQuery.includes('register') || lowerQuery.includes('registration')) {
                return `üìù Class registration: ${campusDatabase.administrative.registration}. Registration opens based on your class standing. Need help navigating the student portal?`;
            }

            if (lowerQuery.includes('transcript')) {
                return `üìÑ Transcripts: ${campusDatabase.administrative.transcripts}. Official transcripts take 3-5 business days to process.`;
            }

            if (lowerQuery.includes('financial aid') || lowerQuery.includes('fafsa')) {
                return `üí∞ Financial Aid: ${campusDatabase.administrative.financial_aid}. Office hours: Monday-Friday 8 AM-5 PM. Don't forget to complete your FAFSA!`;
            }

            if (lowerQuery.includes('parking')) {
                return `üöó Parking: ${campusDatabase.administrative.parking}. Student permits are $150/semester. Visitor parking is available in Lot C.`;
            }

            if (lowerQuery.includes('id card') || lowerQuery.includes('student id')) {
                return `üÜî Student ID cards: ${campusDatabase.administrative.id_cards}. Bring a photo ID and proof of enrollment. Replacement cards cost $15.`;
            }

            // Schedule queries
            if (lowerQuery.includes('schedule') || lowerQuery.includes('finals') || lowerQuery.includes('break') || lowerQuery.includes('graduation')) {
                if (lowerQuery.includes('finals')) {
                    return `üìÖ Final exams: ${campusDatabase.schedules.finals}. Study rooms can be reserved up to 2 weeks in advance!`;
                }
                if (lowerQuery.includes('break')) {
                    return `üèñÔ∏è Spring break: ${campusDatabase.schedules.spring_break}. Have a great break!`;
                }
                if (lowerQuery.includes('graduation')) {
                    return `üéì Graduation ceremony: ${campusDatabase.schedules.graduation}. Congratulations! Don't forget to order your cap and gown.`;
                }
                return `üìÖ Check your student portal for your personal class schedule. Important dates: Finals (${campusDatabase.schedules.finals}), Spring Break (${campusDatabase.schedules.spring_break}).`;
            }

            // Gym/Recreation queries
            if (lowerQuery.includes('gym') || lowerQuery.includes('fitness') || lowerQuery.includes('recreation') || lowerQuery.includes('workout')) {
                return `üí™ The Recreation Center is in Building C and includes fitness equipment, basketball courts, a pool, and group fitness classes. Hours: Monday-Friday 6 AM-11 PM, Weekends 8 AM-10 PM. Your student ID gets you free access!`;
            }

            // WiFi queries
            if (lowerQuery.includes('wifi') || lowerQuery.includes('internet')) {
                return `üì∂ Campus WiFi: Connect to "CampusWiFi" using your student credentials. Having trouble? Visit IT Help Desk in the Library (1st floor) or call (555) 123-TECH.`;
            }

            // Printing queries
            if (lowerQuery.includes('print')) {
                return `üñ®Ô∏è Printing is available at: Library (all floors), Computer Labs, and Student Center. Cost: $0.10/page B&W, $0.25/page color. Use your student ID to pay!`;
            }

            // Events queries
            if (lowerQuery.includes('events') || lowerQuery.includes('activities')) {
                return `üéâ This week's events: Monday - Study Skills Workshop (Library, 7 PM), Wednesday - Career Fair (Student Center, 10 AM-3 PM), Friday - Movie Night (Quad, 8 PM). Check the student portal for more events!`;
            }

            // Advisor queries
            if (lowerQuery.includes('advisor') || lowerQuery.includes('advising')) {
                return `üë®‚Äçüè´ Academic advisors have office hours Monday-Friday 9 AM-4 PM. Schedule appointments through the student portal or call your department directly. Walk-ins welcome during designated hours!`;
            }

            // Default response
            return `I'm here to help with campus information! I can assist with library services, dining options, facility locations, class registration, schedules, and administrative procedures. Try asking about specific topics like "library hours" or "dining menu" or use the quick action buttons!`;
        }
    </script>
